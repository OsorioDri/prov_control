<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-12 bg-light p-4 rounded">
      <h2 class="h3">Login</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false}) do |f| %>
    
        <div class="form_inputs">
          <%= f.input :email, autofocus: true, autocomplete: "email" %>
          <%= f.input :password, autocomplete: "current-password", label: 'Senha' %>
    
          <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, label: 'Lembre-se de mim' %>
          <% end %>
    
        <div class="form-actions d-grid col-6 mx-auto my-3">
          <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
        </div>
      <% end %>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
