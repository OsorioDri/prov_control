<div class="container">
  <h2>Login</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>

    <div class="form_inputs">
      <%= f.input :email, autofocus: true, autocomplete: "email" %>
      <%= f.input :password, autocomplete: "current-password" %>

      <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
      <% end %>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
