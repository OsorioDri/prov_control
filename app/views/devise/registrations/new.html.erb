<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-12 bg-light p-4 rounded">
      <h1 class="text-center h3">Usuário Novo</h1>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
      data: {turbo: false}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
  
        <div class="form_inputs">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "name" },
                      label: 'Nome' %>
          <%= f.input :last_name,
                      required: true,
                      input_html: { autocomplete: "family-name" },
                      label: 'Sobrenome' %>
          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      label: 'Senha' %>
        <%= f.input :password_confirmation,
                      required: true,
                      label: 'Confirme sua senha' %>
        </div>
  
        <div class="form-actions d-grid col-6 mx-auto">
          <%= f.button :submit, "Criar conta", class: "btn btn-primary" %>
        </div>
      <% end %>
  
      <div class="my-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>




